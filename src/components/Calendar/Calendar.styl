radius(n)
  -moz-border-radius n
  -webkit-border-radius n
  border-radius n
  overflow hidden

boxShadow()
  -webkit-box-shadow arguments
  box-shadow arguments

.tCalendar {
  -webkit-user-select: none;
  user-select: none;
  font-size: 14px;
  font-family: "Microsoft Yahei", "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  background: #f8f8f8;
  overflow: auto;
  width: 100%;
  z-index: 100;
}

.tCalendar .tTool {
  border-top: 1px solid #b2b2b2;
  height: 50px;
  font-size: 18px;
  background: #fff;
}

.tCalendar .tTool .tBtn {
  width: 40px;
  height: 40px;
}

.tCalendar .tTool .tPrevMonth {
  width: 80px;
  font-size: 20px;
  line-height: 40px;
  text-align: center;
  color: #F60;
}

.tCalendar .tTool .tNextMonth {
  width: 80px;
  font-size: 20px;
  line-height: 40px;
  text-align: center;
  color: #F60;
}

.tCalendar .tTool .tText {
  margin: 0 8px;
}

.tCalendar .tWeek {
  background: #fff;
  padding: 10px 0;
  text-align: center;
  color: #020202;
}

.tCalendar .tMonth {
  background: #fff;
  color: #7b7b7b;
}

.tCalendar .tMonth > div > div {
  text-align: center;
}

.tCalendar .tMonth .tDatePoint {
  height: 26px;
  line-height: 26px;
  border-radius: 50%;
  width: 26px;
  margin: 0 auto;
}

.tCalendar .tMonth .tDayTip {
  height: 14px;
  line-height: 14px;
  -webkit-transform: scale(0.9);
  transform: scale(0.9);
  line-height: 1;
  font-size: 12px;
}

.tCalendar .tMonth .tDayTip .special-tag {
  display inline-block
  width 8px
  height 8px
  radius 20px
  background #F60
}

.tCalendar .tMonth .tGray .tDatePoint {
  background: #cdcccc;
  color: #fff;
}

.tCalendar .tMonth .tSelected .tDatePoint {
  color: #fff;
  background: #fc8e35;
}

.tCalendar .tMonth .tSelected.tAM .tDatePoint, .tCalendar .tMonth .tBlue .tDatePoint {
  background: #30dbfa;
  color: #fff;
}

.tCalendar .tMonth .tSelected.tPM .tDatePoint {
  background: #d94cfc;
  color: #fff;
}

.tCalendar .tHalfWrap {
  padding: 0 20px;
  border-top: 1px solid #e2e2e2;
  height: 60px;
  background: #fff;
}

.tCalendar .tHalfWrap .tDay {
  display: inline-block;
  width: 48px;
  text-align: center;
  height: 48px;
  line-height: 30px;
  -webkit-border-radius: 24px;
  border-radius: 24px;
  background: #cdcccc;
  color: #fff;
  border: 7px solid #fff;
}

.tCalendar .tHalfWrap .tDay span {
  line-height: 34px;
  display: block;
  font-size: 12px;
  -webkit-transform: scale(0.9);
  transform: scale(0.9);
}

.tCalendar .tHalfWrap .now.tMorning {
  background: #30dbfa;
}

.tCalendar .tHalfWrap .now.tAfternoon {
  background: #d94cfc;
}

.tCalendar .tHalfWrap .now.tFullDay {
  background: #fc8e35;
}

.tCalendar .tHalfWrap .tReset {
  height: 40px;
  line-height: 40px;
}

.tCalendar .tHalfWrap .tReset.tGray {
  color: #cdcccc;
}

.tCalendar .tHalfWrap .selectedDay {
  margin-right: 14px;
  color: #7b7b7b;
  display: inline-block;
  width: 33px;
  text-align: left;
}

.tCalendar .tOperate {
  border-top: 1px solid #e2e2e2;
  padding: 55px 0;
  text-align: center;
  background: #f8f8f8;
}

.tCalendar .tOperate span {
  padding: 12px 50px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  font-size: 17px;
  display: inline-block;
}

.tCalendar .tOperate .tConfirm {
  background: #ff943e;
  border: 1px solid #ff943e;
  color: #fff;
}

.tCalendar .tOperate .tConfirm.tGray {
  opacity: 0.5;
}

.tCalendar .tOperate .tCancel {
  background: #f8f8f8;
  border: 1px solid #d1d4d7;
  margin-right: 17px;
  color: #222;
}

.tCalendar .tTap.tOp.active {
  opacity: 0.5;
}

.tCalendar.tDefault .tMonth .tSelected .tDatePoint {
  opacity: 0.7;
}

.tCalendar.tCircle .tMonth .tNow .tDatePoint {
  border-radius: 13px;
  border: 1px solid #979797;
  width: 26px;
  margin: 0 auto;
  background: #fff;
  color: #7b7b7b;
}

@media screen and (min-width: 320px) and (max-width: 359px) {
  body .tCalendar .tMonth .tDatePoint {
    height: 24px;
    line-height: 24px;
  }

  body .tCalendar .tMonth .tDayTip {
    height: 12px;
    line-height: 12px;
  }

  body .tCalendar .tMonth .tNow .tDatePoint,
  body .tCalendar .tMonth .tSelected .tDatePoint {
    border-radius: 12px;
    width: 24px;
  }

  body .tCalendar .tOperate {
    padding: 20px 0;
  }
}
